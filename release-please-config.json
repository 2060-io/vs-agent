{
  "include-component-in-tag": false,
  "include-v-in-tag": true,
  "separate-pull-requests": false,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "packages": {
    "apps/vs-agent": { "release-type": "node" },
    "packages/model": { "release-type": "node"},
    "packages/client": { "release-type": "node"},
    "packages/nestjs-client": { "release-type": "node" },
    "examples/chatbot": { "release-type": "node"}
  },
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "monorepo",
      "components": ["apps/vs-agent","packages/model","packages/client","packages/nestjs-client", "examples/chatbot"]
    }
  ],
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
