{
  "include-component-in-tag": false,
  "include-v-in-tag": true,
  "separate-pull-requests": false,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "release-type": "node",
  "packages": {
    "apps/vs-agent": { "component": "vs-agent" },
    "packages/model": { "component": "model" },
    "packages/client": { "component": "client" },
    "packages/nestjs-client": { "component": "nestjs-client" },
    "examples/chatbot": { "component": "chatbot" }
  },
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "monorepo",
      "components": ["vs-agent","model","client","nestjs-client","chatbot"]
    },
    {
      "type": "node-workspace",
      "updateAllPackages": true,
      "updatePeerDependencies": true,
      "merge": false
    }
  ],
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
